---

import { getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import ArrowCard from "@components/ArrowCard"
import { SITE } from "@consts"
import TwinklingStars from "@components/TwinklingStars.astro"
import MeteorShower from "@components/MeteorShower.astro"

const posts = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0,4)
---

<PageLayout title="Home" description={SITE.DESCRIPTION}>
  <!-- Background elements -->
  <!-- Light Mode: Modern Gradient + Particles -->
  <div class='absolute inset-0 block dark:hidden'>
    <div class='fixed inset-0 bg-gradient-to-br from-blue-50/30 via-white to-purple-50/20'></div>
    <div class='fixed inset-0 bg-[radial-gradient(ellipse_at_top,rgba(59,130,246,0.08)_0%,transparent_40%)]'></div>
    <div class='fixed inset-0 bg-[radial-gradient(ellipse_at_bottom_left,rgba(168,85,247,0.06)_0%,transparent_40%)]'></div>
    <div id='particles' class='fixed inset-0'></div>
  </div>

  <!-- Dark Theme: Modern Gradient Background -->
  <div class='absolute inset-0 hidden dark:block'>
    <div class='fixed inset-0 bg-gradient-to-br from-zinc-900 via-slate-900/95 to-zinc-900/90'></div>
    <div class='fixed inset-0 bg-[radial-gradient(ellipse_at_top,rgba(59,130,246,0.15)_0%,transparent_50%)]'></div>
    <div class='fixed inset-0 bg-[radial-gradient(ellipse_at_bottom_right,rgba(168,85,247,0.12)_0%,transparent_50%)]'></div>
  </div>

  <!-- Dark Theme: Twinkling Stars / Metors -->
  <div id="galaxy" class="fixed inset-0">
    <div class="hidden dark:block">
      <TwinklingStars/>
      <MeteorShower/>
    </div>
  </div>

  <script is:inline src="/js/bg.js"></script>
  <script is:inline src="/js/scroll-animations.js" defer></script>
  
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center justify-center pt-32 pb-20">
    <div class="mx-auto max-w-4xl text-center px-6">
      <div class="space-y-8 animate-fade-in">
        <div class="text-6xl sm:text-8xl" style="font-family: 'CaskaydiaMono Nerd Font', monospace;">
          ðŸ‘‹
        </div>
        <h1 class="text-6xl sm:text-8xl font-black text-black dark:text-white bg-gradient-to-r from-black to-gray-600 dark:from-white dark:to-gray-400 bg-clip-text text-transparent" style="font-family: 'CaskaydiaMono Nerd Font', monospace;">
          Hi there!
        </h1>
        <h2 class="text-3xl sm:text-4xl font-light text-black/80 dark:text-white/80">
          Welcome to my online presence
        </h2>
      </div>
      
      <div class="mt-6 max-w-3xl mx-auto animate-slide-up">
        <p class="text-xl sm:text-2xl text-black/70 dark:text-white/70 leading-relaxed font-light">
          Here I write more detailed stuff than on any other places online.
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-4 mt-16 animate-slide-up-delayed">
        <a href="/blog" class="btn-blog-card-glass group">
          <span>Read my blog</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/about" class="btn-blog-card-glass group">
          <span>More Info</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <div class="relative bg-gradient-to-b from-transparent via-white/30 dark:via-zinc-900/30 to-transparent">
    <div class="mx-auto max-w-6xl px-6 py-20 space-y-24">

      <!-- About Section -->
      <section class="animate-section">
        <div class="text-center max-w-3xl mx-auto space-y-8">
          <h2 class="text-4xl md:text-5xl font-black text-black dark:text-white">
            About Me
          </h2>
          <div class="space-y-6 text-lg text-black/70 dark:text-white/70 leading-relaxed">
            <p>I'm just a regular person â€” someone who enjoys simple things done well. I enjoy building things. I thrive on challenges that let me learn by doing and solving problems.</p>
          </div>
        </div>
</section>

      <!-- Recent Blog Posts Section -->
      <section class="space-y-12 animate-section">
        <div class="text-center space-y-6">
          <h2 class="text-4xl md:text-5xl font-black text-black dark:text-white">
            Latest Blog Posts
          </h2>
          <p class="text-lg text-black/60 dark:text-white/60">
            Recent thoughts on anything that I wish I could put into words.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6 items-stretch">
          {posts.map((post, index) => (
            <div class="transform-none hover:transform-none">
              <ArrowCard entry={post} pill={true} />
            </div>
          ))}
        </div>
        
        <div class="text-center">
          <a href="/blog" class="btn-blog-card-glass group">
            <span>All Posts</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- Timeless Quote Section -->
      <section class="space-y-12 animate-section">
        <div class="max-w-4xl mx-auto text-center space-y-8">
          <div class="relative inline-block">
            <div class="absolute -inset-4 bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 rounded-3xl blur-xl opacity-30"></div>
            <div class="relative p-12 rounded-3xl bg-gradient-to-br from-white/10 to-transparent dark:from-black/10 backdrop-blur-sm border border-black/5 dark:border-white/5">
              <svg class="w-12 h-12 mx-auto mb-6 text-black/20 dark:text-white/20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
              <blockquote class="text-2xl md:text-3xl font-medium text-black/80 dark:text-white/80 leading-relaxed italic mb-6">
                "The future belongs to those who prepare for it today."
              </blockquote>
              <cite class="text-lg text-black/60 dark:text-white/60 font-normal">
                â€” Malcolm X
              </cite>
            </div>
          </div>
          
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-black dark:text-white">Words to Live By</h3>
            <p class="text-black/60 dark:text-white/60 max-w-2xl mx-auto">
              It should remind us that intentional living through consistent, present actions that forge tomorrow's reality, urging us to cultivate habits, relationships, and resilience now. It calls for daily disciplineâ€”whether building financial wisdom, nurturing family bonds, pursuing health, or seizing small opportunitiesâ€”to harvest a future of purpose and abundance, rather than leaving it to chance.
            </p>
          </div>
        </div>
      </section>

    </div>
  </div>
  

</PageLayout>
