    </section>

    <section class="py-5 border-t border-black/5 dark:border-purple-800/30" style="backdrop-filter: blur(8px);">
      <Container size="md">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <div class="flex flex-col items-center sm:items-start">
            <a href="/" class="flex gap-1 w-fit font-semibold" 
              style="
                color: rgb(var(--foreground));
                transition: opacity 0.2s ease;
              "
              onmouseover="this.style.opacity = '0.8'"
              onmouseout="this.style.opacity = '1'"
            >
              <svg class="size-6" viewBox="0 0 1000 1000" xmlns="http://www.w3.org/2000/svg" style="fill: currentColor">
                <circle cx="500" cy="500" r="497.5" fill="black"/>
                <text x="500" y="750" font-family="Geist, sans-serif" font-size="600" font-weight="bold" text-anchor="middle" fill="white">RF</text>
              </svg>
              {SITE.TITLE}
            </a>
          </div>
          <div class="flex gap-2 justify-center sm:justify-end items-center" style="color: rgb(var(--muted));">
            <span class="relative flex h-3 w-3">
              <span class="absolute inline-flex h-full w-full rounded-full" 
                style="
                  background-color: rgba(var(--foreground), 0.3); 
                  animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
                "
              ></span>
              <span class="relative inline-flex rounded-full h-3 w-3" style="background-color: rgb(var(--foreground));"></span>
            </span>
            All systems normal
          </div>
        </div>
      </Container>
    </section>

    <section class="py-5 border-t border-black/5 dark:border-purple-800/30" style="backdrop-filter: blur(8px);">
      <Container size="md">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <div class="order-2 sm:order-1 flex flex-col items-center sm:items-start">
            <div class="space-x-2">
              <a href="/legal/terms" style="color: rgb(var(--muted)); transition: color 0.2s ease;" onmouseover="this.style.color = `rgb(var(--foreground))`" onmouseout="this.style.color = `rgb(var(--muted))`">
                Terms
              </a>
              <span style="color: rgb(var(--muted));">|</span>
              <a href="/legal/privacy" style="color: rgb(var(--muted)); transition: color 0.2s ease;" onmouseover="this.style.color = `rgb(var(--foreground))`" onmouseout="this.style.color = `rgb(var(--muted))`">
                Privacy
              </a>
            </div>
            <div class="text-sm mt-2" style="color: rgb(var(--subtle));">
              &copy; 20XX | All rights reserved
            </div>
          </div>

          <div class="order-1 sm:order-2 flex justify-center sm:justify-end">
            <div class="flex flex-wrap gap-1 items-center justify-center">
              {
                SOCIALS.map((SOCIAL) => (
                  <a 
                    href={SOCIAL.HREF} 
                    target="_blank" 
                    aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`} 
                    class="group flex size-10 rounded-full p-2 items-center justify-center"
                    style="
                      transition: background-color 0.2s ease;
                      color: rgb(var(--muted));
                    "
                    onmouseover="this.style.backgroundColor = `rgb(var(--card-hover))`; this.style.color = `rgb(var(--foreground))`"
                    onmouseout="this.style.backgroundColor = 'transparent'; this.style.color = `rgb(var(--muted))`"
                  >
                    <svg class="size-full" style="fill: currentColor">
                      <use href={`/social.svg#${SOCIAL.ICON}`} />
                    </svg>
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </Container>
    </section>
  </div>
</footer>

<script is:inline>
  function goBackToTop(event) {
    event.preventDefault()
    window.scrollTo({
        top: 0,
        behavior: "smooth"
    })
  }

  function inintializeBackToTop() {
    const backToTop = document.getElementById("back-to-top")
    backToTop?.addEventListener("click", goBackToTop)
  }

  document.addEventListener("astro:after-swap", inintializeBackToTop)
  inintializeBackToTop()
</script>